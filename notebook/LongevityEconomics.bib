file = {::},
journal = {Tort Trial & Insurance Practice Law Journal},
number = {2},
pages = {657--691},
publisher = {American Bar Association},
title = {{Investing with the Grim Reaper: Insurable Interest and Assignment in Life Insurance}},
url = {https://www.jstor.org/stable/24374296},
volume = {47},
year = {2012}
}
